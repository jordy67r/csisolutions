.enquiries_form
  = form_for @enquiry do |f|
    - if @enquiry.errors.any?
      #error_explanation
        %h2
          = pluralize(@enquiry.errors.count, "error")
          prohibited this enquiry from being saved:
        %ul
          - @enquiry.errors.full_messages.each do |message|
            %li= message
    .field
      = f.label :name, 'name *'
      %br/
      = f.text_field :name
    .field
      = f.label :company
      %br/
      = f.text_field :company
    .field
      = f.label :phone
      %br/
      = f.text_field :phone
    .field
      = f.label :email, 'Email *'
      %br/
      = f.text_field :email
    .field
      = f.label :body, 'Your enquiry'
      %br/
      = f.text_area :body
    .submit_button
      = f.submit"Send"